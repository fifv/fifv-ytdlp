{
	"name": "try-ytdlp",
	"packageManager": "yarn@3.1.1",
	"version": "2.10.2",
	"main": "build/main.js",
	"author": "Fifv",
	"description": "A GUI to use yt-dlp",
	"scripts": {
		"start": "electron .",
		"watch": "webpack --mode=development --watch --devtool=source-map",
		"build": "webpack --mode=production && electron-builder",
		"esbuild-watch": "node ./esbuild.js development",
		"esbuild-prod": "node ./esbuild.js production",
		"webpack build": "webpack --mode=production",
		"electron-forge make": "electron-forge make",
		"electron-builder": "electron-builder"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"ignore": [
					"src",
					".git",
					"playground",
					".*\\.web.*",
					"dist"
				]
			},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "yt-dlp-gui",
						"noMsi": true
					}
				}
			]
		}
	},
	"build": {
		"appId": "ytdlp-gui",
		"productName": "YT-dlp GUI",
		"icon": "./build/img/youtube-icon.png",
		"files": [
			"build/**",
			"package.json"
		],
		"asar": true,
		"asarUnpack": [
			"./build"
		],
		"win": {
			"target": "zip"
		}
	},
	"devDependencies": {
		"@craftamap/esbuild-plugin-html": "^0.3.2",
		"@electron-forge/cli": "^6.0.0-beta.63",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.63",
		"@swc/core": "^1.2.165",
		"@tippyjs/react": "^4.2.6",
		"@types/lodash-es": "^4.17.6",
		"@types/node": "^17.0.23",
		"@types/react": "^18.0.3",
		"@types/react-addons-shallow-compare": "^0.14.22",
		"@types/react-custom-scrollbars": "^4.0.10",
		"@types/react-dom": "^18.0.0",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"add": "^2.0.6",
		"bootstrap": "^5.1.3",
		"colorette": "^2.0.16",
		"copy-webpack-plugin": "^10.2.4",
		"css-loader": "^6.7.1",
		"electron": "18.0.3",
		"electron-builder": "^23.0.3",
		"electron-reload": "^2.0.0-alpha.1",
		"esbuild": "^0.14.36",
		"esbuild-loader": "^2.18.0",
		"esbuild-plugin-clean": "^0.9.0",
		"esbuild-plugin-copy": "^1.3.0",
		"esbuild-sass-plugin": "^2.2.6",
		"eslint": "^8.13.0",
		"eslint-plugin-react": "^7.29.4",
		"html-webpack-plugin": "^5.5.0",
		"iconv-lite": "^0.6.3",
		"lodash-es": "^4.17.21",
		"lowdb": "^3.0.0",
		"rc-progress": "^3.2.4",
		"react": "^18.0.0",
		"react-addons-shallow-compare": "^15.6.3",
		"react-contextmenu": "^2.14.0",
		"react-custom-scrollbars": "^4.2.1",
		"react-dom": "^18.0.0",
		"react-flip-toolkit": "^7.0.13",
		"react-icons": "^4.3.1",
		"react-scrollbars-custom": "^4.0.27",
		"react-spinners": "^0.11.0",
		"rimraf": "^3.0.2",
		"sass": "^1.50.0",
		"sass-loader": "^12.6.0",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.2.8",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.2",
		"yarn": "^1.22.18"
	},
	"dependencies": {
		"@electron/remote": "^2.0.8",
		"electron-acrylic-window": "^0.5.11",
		"electron-store": "^8.0.1"
	}
}
